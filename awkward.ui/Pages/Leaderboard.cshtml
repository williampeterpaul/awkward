@page
@model awkward.ui.Pages.LeaderboardModel
@{
    ViewData["Title"] = "Leaderboard";
}

<h2>Leaderboard</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Entities[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entities[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entities[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entities[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entities[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entities[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entities[0].Medium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entities[0].Merit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Entities)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medium)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Merit)
                </td>
            </tr>
        }
    </tbody>
</table>
